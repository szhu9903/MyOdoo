<odoo>
    <data>
        <record model="ir.ui.view" id="my_user_form">
            <field name="name">my.user</field>
            <field name="model">my.user</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <label for="fname" class="oe_edit_only"/>
                        <h1>
                            <field name="fname"/>
                        </h1>
                        <group>
                            <label for="fuser_code" string="人员信息"/>
                            <div class="o_row">
                                <field name="fuser_code" required="1"/>:
                                <field name="fuser_pwd" required="1"/>
                            </div>
                            <field name="fuser_code" />
                            <field name="fuser_pwd" />
                            <field name="fdel_flag" />
                        </group>
                    </sheet>

                </form>
            </field>
        </record>


        <record model="ir.ui.view" id="my_user_list">
            <field name="name">my.user.list</field>
            <field name="model">my.user</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="fname"/>
                    <field name="fuser_code" />
                </tree>
            </field>
        </record>


        <record id="my_user_kanban" model="ir.ui.view">
            <field name="name">my.user.kanban</field>
            <field name="model">my.user</field>
            <field name="arch" type="xml">
                <kanban class="o_kanban_mobile">
                    <field name="fname"/>
                    <field name="fuser_code"/>
                    <field name="fstart_date"/>
                    <field name="fend_date"/>
                    <!--<templates>-->
                        <!---->
                    <!--</templates>-->
                </kanban>
            </field>
        </record>




        <record model="ir.ui.view" id="my_user_filter">
            <field name="name">my.user</field>
            <field name="model">my.user</field>
            <field name="arch" type="xml">
                <search string="Fdel User">
                    <field name="fname"/>
                    <filter name="fdel" string="有效用户" domain="[('fdel_flag','=',0)]" />
                </search>
            </field>
        </record>

        <record model="ir.actions.act_window" id="my_user_action_window">
            <field name="name">my.user</field>
            <field name="res_model">my.user</field>
            <field name="view_mode">tree,form,kanban</field>
            <field name="context" eval="{'search_default_fdel':1}" />
        </record>
    </data>
</odoo>
